@model WebApplication1.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <style>
        #login-div{
            position:absolute;
            left:40%;
            top:40%;
            border:1px solid #000;
            padding:10px 10px;
        }
    </style>
    <div id="login-div">
        @using (Html.BeginForm("Atuthorize", "Login", FormMethod.Post))
        {
            <table>

                <tr>
                    <td></td>
                    <td style="text-decoration:underline">App Name</td>
                </tr>
                <tr>
                  
                    <td>@Html.LabelFor(model => model.Email)</td>

                    <td>@Html.EditorFor(model => model.Email)</td>

                </tr>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
                <tr>
                    <td>@Html.LabelFor(model => model.Pass)</td>
                    <td>@Html.EditorFor(model => model.Pass)</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.Pass)</td>
                </tr>

                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage )</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</body>
</html>
